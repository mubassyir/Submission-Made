<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/movie_cover"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@drawable/poster_aquaman"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="14sp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/movie_cover"
        android:orientation="vertical"
        android:layout_toRightOf="@id/movie_cover">
        <TextView
            android:id="@+id/txt_title"
            android:textStyle="bold"
            android:textColor="#FF000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Judul File"
            android:layout_marginBottom="5dp"
            android:textSize="25sp"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating    : "/>
                <TextView
                    android:id="@+id/rating"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai rating"/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release :"/>
                <TextView
                    android:id="@+id/release_date"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Rilis"/>

            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="Deskripsi Movie"/>


    </LinearLayout>

</RelativeLayout>